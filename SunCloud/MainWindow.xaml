<Window x:Class="SunCloud.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SunCloud"
        mc:Ignorable="d"
        Title="MainWindow" Height="480" Width="800">
    <Grid x:Name="Grid">
        <TextBox Margin="0,0,0,0" x:Name="extBox" VerticalAlignment="Top" Height="90" Text=""/>
        <ListBox Margin="0,100" x:Name="Box" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <Button x:Name="Button" Height="50" VerticalAlignment="Bottom" Content="Узнать" Click="Button_Click"/>
    </Grid>
</Window>
