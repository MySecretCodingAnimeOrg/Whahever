<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="radio_button" TargetType="RadioButton">
        <Setter Property="Background" Value="#FFFFFF"/>
        <!-- цвет фона -->
        
        <Setter Property="Foreground" Value="#87B6CA" />
        <Setter Property="TextBlock.Background" Value="#87B6CA" />
        <Setter Property="TextBlock.Opacity" Value="0.5" />
    
        <Setter Property="Width" Value="226"/>
        <!-- ширина -->
        <Setter Property="Height" Value="29"/>
        <Setter Property="FontSize" Value="18px"/>
        
        <!-- высота -->
        <Setter Property="Opacity" Value="0.5"/>
        <!-- прозрачность на 50% -->

        <Setter Property="HorizontalContentAlignment" Value="Center" />

        <Setter Property="VerticalContentAlignment" Value="Center" />
        <!-- выравнивание текста по центру -->
        <Setter Property="Padding" Value="0"/>

        <!-- отступы текста от границы блока -->
        <Setter Property="FontFamily" Value="Jura"/>
        <!-- шрифт Jura -->
    
    </Style>

</ResourceDictionary>