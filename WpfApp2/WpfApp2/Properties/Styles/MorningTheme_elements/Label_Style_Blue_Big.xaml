<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="Label" x:Key="Label_Style_Blue_Big">
        <Setter Property="BorderThickness" Value="0,0,0,2"/>
        <Setter Property="BorderBrush" Value="#3D95B9" />
        <Setter Property="FontFamily" Value="Jura"/>
        <Setter Property="Foreground" Value="#3D95B9"/>
        <Setter Property="FontSize" Value="36"/>
        <Setter Property="TextBlock.TextDecorations">
            <Setter.Value>
                <TextDecorationCollection>
                    <TextDecoration Location="Underline" PenOffset="0">
                        <TextDecoration.Pen>
                            <Pen Brush="#3D95B9" Thickness="3"/>
                        </TextDecoration.Pen>
                    </TextDecoration>
                    <TextDecoration Location="Underline">
                        <TextDecoration.Pen>
                            <Pen Brush="Transparent" Thickness="10" />
                        </TextDecoration.Pen>
                    </TextDecoration>
                </TextDecorationCollection>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>